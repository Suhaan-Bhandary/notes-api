{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["ES5"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noPropertyAccessFromIndexSignature": true
  },
  "include": ["babel.config", "src/env.d", "src/**/*"],
  "exclude": ["tools", "./build/**/*"]
}
